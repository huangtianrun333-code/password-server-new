{
  "version": 2,
  "builds": [
    {
      "src": "api/password.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/add-password.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}